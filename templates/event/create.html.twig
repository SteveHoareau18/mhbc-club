{% extends 'base.html.twig' %}

{% block title %}Ajouter un événement{% endblock %}


{% block body %}
    <h1>Ajouter un nouvel événement</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.date) }}
    {{ form_row(form.place) }}
    {{ form_row(form.type) }}
    {{ form_row(form.limitedSpace) }}

    <button class="bg-sky-700 px-4 py-2 text-white hover:bg-sky-800 sm:px-8 sm:py-3 btn btn-success">Créer l'événement</button>
    {{ form_end(form) }}
{% endblock %}
