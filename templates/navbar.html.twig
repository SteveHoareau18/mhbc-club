<nav class="bg-gray-800 p-4">
    <div class="container mx-auto flex justify-between items-center">
        <div class="text-white text-lg font-bold">
            <a href="{{ path('home') }}">My Website</a>
        </div>
        <ul class="flex space-x-4">
            <li>
                <a href="{{ path('home') }}" class="text-gray-300 hover:text-white">Home</a>
            </li>
            <li>
                <a href="{{ path('about') }}" class="text-gray-300 hover:text-white">About</a>
            </li>
            <li>
                <a href="{{ path('contact') }}" class="text-gray-300 hover:text-white">Contact</a>
            </li>
            {% if app.user %}
                <li>
                    <a href="{{ path('profile') }}" class="text-gray-300 hover:text-white">Profile</a>
                </li>
                <li>
                    <a href="{{ path('logout') }}" class="text-gray-300 hover:text-white">Logout</a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('login') }}" class="text-gray-300 hover:text-white">Login</a>
                </li>
                <li>
                    <a href="{{ path('register') }}" class="text-gray-300 hover:text-white">Register</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
