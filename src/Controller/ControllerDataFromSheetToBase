<?php
namespace App\Controller;

use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Annotation\Route;

class ControllerDataFromSheetToBase extends AbstractController
{
    #[Route('/store-data', name: 'app_store_data')]
    public function storeData(GoogleSheetsService $googleSheetsService, DataStorageService $dataStorageService)
    {
        $spreadsheetId = 'https://ffhandball-my.sharepoint.com/:x:/g/personal/6134000_coc_ffhandball_net/EX4H7SYFvz9AnvEmTX_hi2ABC9k6iiSH3AlJLilbetdAHw?rtime=v1CUQj7v3Eg';
        $range = 'SHEET_RANGE';

        $data = $googleSheetsService->getSheetData($spreadsheetId, $range);
        $dataStorageService->storeData($data);

        return new Response('Data stored successfully!');
    }
}
